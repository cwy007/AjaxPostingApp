<!DOCTYPE html>
<html>
  <head>
    <title>AjaxPostingApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <% if flash[:notice] %>
        <%= flash[:notice] %>
      <% end %>

      <% if flash[:alert] %>
        <%= flash[:alert] %>
      <% end %>
      <h5>
        <em><%= link_to "首页", "/" %></em>
        <div class="pull-right">
          <% if current_user %>
          Hi! <%= current_user.display_name %>
          <%= link_to('登出', destroy_user_session_path, :method => :delete) %>
          <%= link_to('修改密码', edit_user_registration_path) %>
          <% else %>
          <%= link_to('注册', new_user_registration_path) %> |
          <%= link_to('登入', new_user_session_path) %>
          <% end %>
        </div>
      </h5>

      <p>
        <%= link_to "jQuery  练习一", jquery_1_path %> |
        <%= link_to "jQuery  练习二", jquery_2_path %> |
        <%= link_to "jQuery  练习三", jquery_3_path %> |
        <%= link_to "jQuery  练习四", jquery_4_path %> |
        <%= link_to "jQuery  练习五", jquery_5_path %>
      </p>

      <%= yield %>
    </div>

  </body>
</html>
