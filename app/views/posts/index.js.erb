<% @posts.each do |post| %>
  $("#post-list").append("<hr style=\"border: 10px solid green; \">");
  $("#post-list").append( "<%=j render :partial => "post", :locals => { :post => post } %>" );
<% end %>

<% if @posts.any? %>
  var current_post_id = <%= @posts.last.id %>;
<% else %>
  console.log("data ended");
  $("#notice").html("<h2>别扯了！已到底部</h2>");
<% end %>
