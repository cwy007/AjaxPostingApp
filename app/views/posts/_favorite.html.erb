<% if !post.find_favorite(current_user) %>
  <%= link_to favorite_post_path(post), :method => :post, :remote => true, :class => "btn btn-default" do %>
    <i class="fa fa-heart-o"></i>
    <%= post.favorites.count %>
  <% end %>
<% else %>
  <%= link_to unfavorite_post_path(post), :method => :post, :remote => true, :class => "btn btn-success"  do %>
    <i class="fa fa-heart-o "></i>
    <%= post.favorites.count %>
  <% end %>
<% end %>
