<div id="post-<%= post.id %>" class="panel panel-default">
  <div class="panel-heading">
    <%= post.user.display_name %>
  </div>
  <div class="panel-body">
    <p>
      <%= post.content %>
    </p>
    <span id="post-thumbup-<%= post.id %>" class="label label-success">
      <%= post.likes.count %> üëç
    </span>
    <div class="text-right">

      <span id="post-like-<%= post.id %>">
        <%= render :partial => "like", :locals => { :post => post } %>
      </span>

      <span>
        <% if !post.find_favorite(current_user) %>
          <%= link_to favorite_post_path(post), :method => :post, :class => "btn btn-default" do %>
            <i class="fa fa-heart-o"></i>
            <%= post.favorites.count %>
          <% end %>
        <% else %>
          <%= link_to unfavorite_post_path(post), :method => :post, :class => "btn btn-success"  do %>
            <i class="fa fa-heart-o "></i>
            <%= post.favorites.count %>
          <% end %>
        <% end %>
      </span>

      <% if current_user && post.user == current_user %>
        <%= link_to "Delete", post_path(post), :method => :delete, :remote => true, :class => "btn btn-danger" %>
      <% else %>
        <%= link_to "Delete", post_path(post), :method => :delete, :remote => true, :class => "btn btn-danger disabled" %>
      <% end %>
    </div>
  </div>
</div>
